<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_add_edit_training_plan_item">

    <fragment
        android:id="@+id/nav_exercises"
        android:name="ru.sweetmilk.gymtracker.cases.exercises.ExercisesFragment"
        android:label="@string/menu_exercises"
        tools:layout="@layout/frag_exercises">
        <action
            android:id="@+id/action_exercises_to_addEditExercise"
            app:destination="@id/nav_add_edit_exercise" />
        <action
            android:id="@+id/action_exercises_to_exerciseDetails"
            app:destination="@id/nav_exercise_details" />
        <argument
            android:name="message"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/nav_add_edit_exercise"
        android:name="ru.sweetmilk.gymtracker.cases.addEditExercise.AddEditExerciseFragment"
        android:label="{title}"
        tools:layout="@layout/frag_add_edit_exercise">
        <argument
            android:name="exerciseId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="false" />
        <action
            android:id="@+id/action_addEditExercise_to_exerciseDetails"
            app:destination="@id/nav_exercise_details"
            app:popUpTo="@id/nav_exercises" />
    </fragment>

    <fragment
        android:id="@+id/nav_exercise_details"
        android:name="ru.sweetmilk.gymtracker.cases.exerciseDetails.ExerciseDetailsFragment"
        android:label="{title}"
        tools:layout="@layout/frag_exercise_details">
        <argument
            android:name="exerciseId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="false" />
        <argument
            android:name="message"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_exerciseDetails_to_addEditExercise"
            app:destination="@id/nav_add_edit_exercise" />

        <action
            android:id="@+id/action_exerciseDetails_to_exercises"
            app:destination="@id/nav_exercises" />
    </fragment>

    <fragment
        android:id="@+id/nav_training_plan"
        android:name="ru.sweetmilk.gymtracker.cases.trainingPlan.TrainingPlanFragment"
        android:label="@string/menu_training_plan" />

    <fragment
        android:id="@+id/nav_add_edit_training_plan_item"
        android:name="ru.sweetmilk.gymtracker.cases.addEditTrainingPlanItem.AddEditTrainingPlanItemFragment"
        android:label="@string/add_exercise_label">
        <argument
            android:name="exerciseAndTrainingPlanItems"
            android:defaultValue="@null"
            app:argType="ru.sweetmilk.gymtracker.data.entities.ExerciseAndTrainingPlanItems"
            app:nullable="true" />
        <argument
            android:name="excludedExerciseIds"
            android:defaultValue="@null"
            app:argType="string[]"
            app:nullable="true" />
    </fragment>

</navigation>